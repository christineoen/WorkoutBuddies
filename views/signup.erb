<div class="back-div" align="center">
  <div class="transparency"></div>
  <h2>Sign Up!</h2>

  <form action='/signup' method='post'>
    <input class= "textboxes form-control" type='email' name='email' required = "required" placeholder='Email'><br>
    <input class= "textboxes form-control" type='text' name='display_name' placeholder='Display Name' required = "required"><br>
    <input class= "textboxes form-control" type="text" name="address" placeholder="Street Address" required = "required"><br>
    <input class= "textboxes form-control" type="text" name="zip" placeholder="Zip Code" required = "required"><br>
    <input class= "textboxes form-control" type='password' name='password' placeholder='Password' required = "required"><br>
    <input class= "textboxes form-control" type='password' name='password_confirm' placeholder='Verify password' required = "required"><br>
    <input type='submit' class="btn btn-primary btn-lg" value='Submit'>
  </form>
</div>